<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:fontFamily="sans-serif-medium"
            android:text="Hai, Saiful!"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="230dp"
                android:text="Lihat Profil"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Ambis Meter -->
    <LinearLayout
        android:id="@+id/ambisMeter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/progressDailyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progres Harian"
                android:textSize="12sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/progressDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressDailyPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76%"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/progressWeeklyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progres Mingguan"
                android:textSize="12sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/progressWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressWeeklyPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76%"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Jadwal Belajar -->
    <TextView
        android:id="@+id/scheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jadwal Belajar"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ambisMeter" />

    <FrameLayout
        android:id="@+id/scheduleContainer"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@color/light_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scheduleTitle" />

    <!-- Fitur -->
    <TextView
        android:id="@+id/featureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fitur"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scheduleContainer" />

    <GridLayout
        android:id="@+id/featureGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featureTitle">

        <!-- Icons for Features -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/practiceIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_practice" />

            <TextView
                android:id="@+id/practiceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latihan Soal"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/consultationIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_consultation" />

            <TextView
                android:id="@+id/consultationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsultasi"
                android:textSize="12sp" />
        </LinearLayout>
    </GridLayout>

    <!-- Mata Pelajaran -->
    <TextView
        android:id="@+id/subjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mata Pelajaran"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/featureGrid" />

    <GridLayout
        android:id="@+id/subjectGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectTitle">

        <!-- Example Subjects -->
        <ImageView
            android:id="@+id/chemistryIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_chemistry" />

        <ImageView
            android:id="@+id/mathIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_math" />

        <ImageView
            android:id="@+id/biologyIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_biology" />

        <ImageView
            android:id="@+id/englishIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_english" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
