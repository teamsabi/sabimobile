<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".masukkanOTP">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="418dp"
        android:layout_height="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgroundmelengkung" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="151dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:srcCompat="@drawable/sabichamps"
        tools:layout_editor_absoluteX="130dp" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="126dp"
        android:layout_height="89dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosabipolosan" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="222dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView17"
        app:srcCompat="@drawable/selamatdatang"
        tools:layout_editor_absoluteX="94dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Masukkan Kode OTP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="315dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="Masukan 5 digit kode OTP yang sudah kami kirim ke email anda!!"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/masukkanotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan OTP"
        android:inputType="text"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="462dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/batalpw"
        android:layout_width="121dp"
        android:layout_height="59dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="316dp"
        android:text="Batal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masukkanotp" />

    <Button
        android:id="@+id/lanjutpw2"
        android:layout_width="121dp"
        android:layout_height="59dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="60dp"
        android:text="Lanjut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masukkanotp" />

</androidx.constraintlayout.widget.ConstraintLayout>